@model Book

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Name</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge">@Model.InformationBook</span>
                        </div>
                        <div class="row ps-2">
                        <h5 class="text-dark text-opacity-50 ">Discription : </h5>
                        @foreach(var cate in Model.CategoryBooks)
                        {
                                <h6 class="text-dark text-opacity-50 ">@cate.Name</h6>
                        }  
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 ">DatePublic : @Model.DatePublic</h6>
                        </div>
                       
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

